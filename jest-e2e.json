{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "collectCoverageFrom": [
    "/**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/$1"
  }
}
